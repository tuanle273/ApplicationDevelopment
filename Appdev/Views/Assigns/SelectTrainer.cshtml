
@model IEnumerable<Appdev.Models.Trainer>
@{
    ViewBag.Title = "Trainer";
}

<h2>All Trainee</h2>
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>User Name</th>
            <th>Email</th>
            <th scope="col">Action </th>
        </tr>
    </thead>
    <tbody>
        @{var i = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>
                    @Html.ActionLink("Assignment", "Assignment", new { Id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("DeleteAssign", "DeleteAssignment", new { Id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>




@model Appdev.Models.CourseCategoryViewModel
@{
    ViewBag.Title = "Create New Course";
}

<h2>Edit Course</h2>

@using (Html.BeginForm("Edit", "Courses", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new course.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Course.Id, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Course.Id, new { @class = "form-control", @readonly = "readonly" })
        </div>
        @Html.ValidationMessageFor(model => model.Course.Id, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Course.Name, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.Course.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Course.Description, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.Course.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.CategoryId, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.Course.CategoryId, new SelectList(Model.Categories, "Id", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Course.CategoryId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Back", "Index", "Courses", null, new { @class = "btn btn-default" })
            <input type="submit" class="btn btn-default" value="Edit Course" />
        </div>
    </div>
}
@model Appdev.Models.OverViewViewModel
@{
    ViewBag.Title = "Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Of Trainer</h2>
<input type="text" id="searchTrainer" placeholder="Search info">
<table class="table">
    <thead>
        <tr>
            <th scope="col">Trainer Id</th>
            <th scope="col">Trainer Name</th>
            <th scope="col">Trainer Email</th>
        </tr>
    </thead>
    <tbody id="tblDataTrainer">
        @foreach (var item in Model.TrainerList)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Trainer.FullName</th>
                <td>@item.Trainer.Email</td>
            </tr>
        }
    </tbody>
</table>
